
<div class="container rounded bg-dark text-white p-4 mt-4">
  <div class="row">
    <div class="col-12 col-lg-8 mx-auto">
      
        <div class="card-header">
          <h3 class="mb-3">Funcionário: <%= @employee.name %></h3>
        </div>
        <div class="card-body">
          
          <div class="row mb-3">
            <div class="col-sm-4 fw-bold">Email:</div>
            <div class="col-sm-8"><%= @employee.email %></div>
          </div>
          
          <div class="row mb-3">
            <div class="col-sm-4 fw-bold">Unidade:</div>
            <div class="col-sm-8"><%= @employee.unit.name %></div>
          </div>
          <div class="row mb-3">
            <div class="col-sm-4 fw-bold">Departamento:</div>
            <div class="col-sm-8"><%= @employee.department.name %></div>
          </div>
          <div class="row mb-3">
            <div class="col-sm-4 fw-bold">Função:</div>
            <div class="col-sm-8"><%= @employee.position.name %></div>
          </div>
          
          <div class="d-flex gap-2 mt-5">
            <%= link_to "Editar", edit_employee_path(@employee), class: "btn btn-primary" %>
            <%= link_to "Voltar", employees_path, class: "btn btn-secondary" %>
            <%= link_to "Excluir", @employee, class: "btn btn-danger ms-auto", 
                data: { turbo_method: :delete, turbo_confirm: "Tem certeza que deseja excluir este funcionário?" } %>
          </div>
        </div>
    
    </div>
  </div>
</div>