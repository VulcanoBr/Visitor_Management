
<div class="container rounded bg-dark text-white p-4 mt-4">
  <div class="row">
    <div class="col-12">
      
        <div class="card-header bg-dark mb-3">
          <h2 class="mb-0">Department: <%= @department.name %></h2>
        </div>
        <div class="card-body">
          <div class="mb-4">
            <h5>units relacionadas:</h5>
            <% if @department.units.any? %>
              <div class="mt-2">
                <% @department.units.each do |unit| %>
                  <span class="badge bg-success fs-6 me-2 mb-2"><%= unit.name %></span>
                <% end %>
              </div>
            <% else %>
              <p class="text-muted">Nenhuma unit relacionada.</p>
            <% end %>
          </div>
          
          <div class="d-flex gap-2">
            <%= link_to "Editar", edit_department_path(@department), class: "btn btn-primary" %>
            <%= link_to "Voltar", departments_path, class: "btn btn-secondary" %>
            <%= link_to "Excluir", @department, class: "btn btn-danger ms-auto", 
                data: { turbo_method: :delete, turbo_confirm: "Tem certeza que deseja excluir este department?" } %>
          </div>
        </div>
     
    </div>
  </div>
</div>